{
  "extends": "./.tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "types": [
      "svelte"
    ],
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "src/lib/*"
      ],
      "$game/*": [
        "src/game/*"
      ],
      "$ui/*": [
        "src/ui/*"
      ],
      "$data/*": [
        "src/data/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ]
}